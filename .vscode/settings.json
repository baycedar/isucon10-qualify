{
  /*----------------------------------------------------------------------------------*/
  // Python Settings
  /*----------------------------------------------------------------------------------*/
  "[python]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.tabSize": 4,
    "editor.rulers": [
      88,
      100,
    ],
  },
  "files.exclude": {
    "**/venv/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
  },
  "python.languageServer": "Microsoft",
  "python.venvPath": "${workspaceFolder}/webapp/python/venv",
  "python.pythonPath": "${workspaceFolder}/webapp/python/venv/bin/python",
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--ignore=E203,W503",
    "--max-line-length=100",
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "./webapp/python/",
  ],
  /*----------------------------------------------------------------------------------*/
  // Go Settings
  /*----------------------------------------------------------------------------------*/
  "go.goroot": "/opt/go/current",
  "go.useLanguageServer": true,
  "[go]": {
    "editor.renderWhitespace": "selection",
  },
  /*----------------------------------------------------------------------------------*/
  // Others
  /*----------------------------------------------------------------------------------*/
  "cSpell.words": [
    "Beginx",
    "DBNAME",
    "Infof",
    "NAZOTTE",
    "PGDATABASE",
    "PGHOST",
    "PGPASSWORD",
    "PGPORT",
    "PGUSER",
    "PSQL",
    "Rowx",
    "VARCHAR",
    "blks",
    "btree",
    "camelize",
    "cnxpool",
    "consolas",
    "createdb",
    "dbgroup",
    "dropdb",
    "enduml",
    "getenv",
    "gommon",
    "isucon",
    "isuumo",
    "jmoiron",
    "noqa",
    "pipenv",
    "plpgsql",
    "postgis",
    "postgres",
    "postgresql",
    "psycopg",
    "pyenv",
    "skinparam",
    "sqlx",
    "startuml",
    "stddev",
    "venv",
    "werkzeug"
  ],
}